{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clean",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/neobae"
      },
      "args": ["-f", "Makefile.gui-mingw", "clean"],
      "problemMatcher": []
    },
    {
        "label": "Run GUI",
        "type": "shell",
        "command": "${workspaceFolder}/neobae/bin/zefidi.exe",
        "options": {
            "cwd": "${workspaceFolder}/neobae/bin"
        },
        "dependsOn": ["Build GUI"]
    },
    {
      "label": "Build GUI",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/neobae"
      },
      "args": ["-f", "Makefile.gui-mingw", "-j20"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["Clean"],
      "problemMatcher": "$gcc"
    },
    {
      "label": "Build GUI with Debug Logging",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/neobae"
      },
      "args": ["-f", "Makefile.gui-mingw", "DEBUG=1", "-j20"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["Clean"],
      "problemMatcher": "$gcc"
    },
    {
      "label": "Build GUI with Debug Logging and Symbols",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/neobae"
      },
      "args": ["-f", "Makefile.gui-mingw", "DEBUG=1", "LDEBUG=1","-j20"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["Clean"],
      "problemMatcher": "$gcc"
    }    
  ]
}