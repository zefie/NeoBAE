<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
   
    <!-- Storage permissions for reading -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    
    <!-- For accessing external storage devices like SD cards, USB drives on Android 11+ -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" 
        tools:ignore="ScopedStorage" />
    
    <!-- Notification permission for Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />

    <application
        android:allowBackup="true"
        android:label="miniBAE for Android"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MiniBAEDroid.NoActionBar">
        <activity android:name=".MainActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <service android:name=".MediaPlaybackService"
            android:foregroundServiceType="mediaPlayback"
            android:exported="false" />
            
        <receiver android:name=".MusicNotificationReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.zefie.miniBAEDroid.PLAY_PAUSE" />
                <action android:name="com.zefie.miniBAEDroid.NEXT" />
                <action android:name="com.zefie.miniBAEDroid.PREVIOUS" />
                <action android:name="com.zefie.miniBAEDroid.CLOSE" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
